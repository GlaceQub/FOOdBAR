@model IEnumerable<Restaurant.Models.Tafel>

@{
    ViewData["Title"] = "Tafels";
}

<h1 class="mb-4">Tafels</h1>

<p>
    <a asp-action="Create" class="btn btn-primary mb-3">Nieuwe tafel toevoegen</a>
</p>

<table class="table table-striped table-bordered align-middle">
    <thead class="table-dark">
        <tr>
            <th scope="col">Tafelnummer</th>
            <th scope="col">Aantal Personen</th>
            <th scope="col">Min. Personen</th>
            <th scope="col">Actief</th>
            <th scope="col">Barcode</th>
            <th scope="col"></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.TafelNummer</td>
                <td>@item.AantalPersonen</td>
                <td>@item.MinAantalPersonen</td>
                <td>
                    @if (item.Actief)
                    {
                        <span class="badge bg-success">Ja</span>
                    }
                    else
                    {
                        <span class="badge bg-secondary">Nee</span>
                    }
                </td>
                <td>@item.QrBarcode</td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-sm btn-warning me-1">Bewerken</a>
                    <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-sm btn-danger">Verwijderen</a>
                </td>
            </tr>
        }
    </tbody>
</table>