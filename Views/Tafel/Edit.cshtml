@model Restaurant.Models.Tafel

@{
    ViewData["Title"] = "Tafel bewerken";
}

<h2>Tafel bewerken</h2>

<form asp-action="Edit" method="post">
    <input type="hidden" asp-for="Id" />
    <div class="form-group">
        <label asp-for="TafelNummer" class="control-label">Tafelnummer</label>
        <input asp-for="TafelNummer" class="form-control" />
        <span asp-validation-for="TafelNummer" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="AantalPersonen" class="control-label">Aantal personen</label>
        <input asp-for="AantalPersonen" class="form-control" />
        <span asp-validation-for="AantalPersonen" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="MinAantalPersonen" class="control-label">Minimum aantal personen</label>
        <input asp-for="MinAantalPersonen" class="form-control" />
        <span asp-validation-for="MinAantalPersonen" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="QrBarcode" class="control-label">Barcode</label>
        <input asp-for="QrBarcode" class="form-control" />
        <span asp-validation-for="QrBarcode" class="text-danger"></span>
    </div>
    <div class="form-group form-check">
        <input asp-for="Actief" class="form-check-input" />
        <label asp-for="Actief" class="form-check-label"></label>
    </div>
    <button type="submit" class="btn btn-primary">Opslaan</button>
    <a asp-action="Index" class="btn btn-secondary">Annuleren</a>
</form>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}