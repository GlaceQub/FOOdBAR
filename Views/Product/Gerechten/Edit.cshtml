@model Restaurant.ViewModels.Product.Gerechten.GerechtenEditViewModel

@{
    ViewData["Title"] = "Gerecht bewerken";
}

<div class="mt-3">
<h1 class="mb-4">Gerecht bewerken</h1>
<div class="card shadow-sm">
    <div class="card-body">
        <div asp-validation-summary="All" class="text-danger"></div>
        <form asp-action="EditGerecht" method="post" class="row g-3">
            <input type="hidden" asp-for="Id" />
            <div class="col-12">
                <label asp-for="Naam" class="form-label">Naam</label>
                <input asp-for="Naam" class="form-control" />
                <span asp-validation-for="Naam" class="text-danger small d-block mt-1"></span>
            </div>
            <div class="col-12">
                <label asp-for="Beschrijving" class="form-label">Beschrijving</label>
                <input asp-for="Beschrijving" class="form-control" />
                <span asp-validation-for="Beschrijving" class="text-danger small d-block mt-1"></span>
            </div>
            <div class="col-12">
                <label asp-for="Prijs" class="form-label">Prijs (€)</label>
                <input asp-for="Prijs" class="form-control" type="number" step="0.01" min="0" />
                <span asp-validation-for="Prijs" class="text-danger small d-block mt-1"></span>
            </div>
            <div class="col-12">
                <label asp-for="AllergenenInfo" class="form-label">Allergenen</label>
                <input asp-for="AllergenenInfo" class="form-control" />
                <span asp-validation-for="AllergenenInfo" class="text-danger small d-block mt-1"></span>
            </div>
            <div class="col-12">
                <label asp-for="CategorieId" class="form-label">Categorie</label>
                <select asp-for="CategorieId" class="form-control"
                        asp-items="@(new SelectList(Model.CategorieList, "Id", "Naam", Model.CategorieId))"></select>
                <span asp-validation-for="CategorieId" class="text-danger small d-block mt-1"></span>
            </div>
            <div class="col-12">
                <div class="form-check">
                    <input asp-for="Actief" class="form-check-input" />
                    <label asp-for="Actief" class="form-check-label ms-2"></label>
                </div>
            </div>
            <div class="col-12">
                <div class="form-check">
                    <input asp-for="IsSuggestie" class="form-check-input" />
                    <label asp-for="IsSuggestie" class="form-check-label ms-2">Suggestie</label>
                </div>
            </div>
            <div class="col-12 d-flex gap-2 mt-3">
                <button type="submit" class="btn btn-custom-primary">Opslaan</button>
                <a asp-action="Gerechten" class="btn btn-custom-secondary">Annuleren</a>
            </div>
        </form>
    </div>
</div>
</div>
@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}