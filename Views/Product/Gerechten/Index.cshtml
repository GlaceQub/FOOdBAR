@model IEnumerable<Restaurant.Models.Product>
@{
    ViewData["Title"] = "Gerechten";
}

<h1 class="mb-4">Gerechten</h1>

<p>
    <a asp-action="CreateGerecht" class="btn btn-custom-primary mb-3">Nieuw gerecht aanmaken</a>
</p>

<table class="table tafel-table align-middle">
    <thead class="table-dark">
        <tr>
            <th>Naam</th>
            <th>Beschrijving</th>
            <th>Prijs</th>
            <th>Allergenen</th>
            <th>Categorie</th>
            <th>Actief</th>
            <th>Suggestie</th>
            <th>Acties</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var p in Model)
        {
            <tr>
                <td>@p.Naam</td>
                <td>@p.Beschrijving</td>
                <td>€ @p.PrijsProducten.OrderByDescending(pp => pp.DatumVanaf).FirstOrDefault()?.Prijs</td>
                <td>@p.AllergenenInfo</td>
                <td>@p.Categorie?.Naam</td>
                <td>
                    @if (p.Actief)
                    {
                        <span class="badge bg-success">Ja</span>
                    }
                    else
                    {
                        <span class="badge bg-secondary">Nee</span>
                    }
                </td>
                <td>
                    @if (p.IsSuggestie)
                    {
                        <span class="badge bg-success">Ja</span>
                    }
                    else
                    {
                        <span class="badge bg-secondary">Nee</span>
                    }
                <td>
                    <a asp-action="EditGerecht" asp-route-id="@p.Id" class="btn btn-warning btn-sm">Wijzigen</a>
                    <form asp-action="Delete" asp-route-id="@p.Id" method="post" style="display:inline;">
                        <button type="submit" class="btn btn-danger btn-sm" onclick="return confirm('Weet je zeker dat je dit gerecht wilt verwijderen?');">Verwijderen</button>
                    </form>
                </td>
            </tr>
        }
    </tbody>
