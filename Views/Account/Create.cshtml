@model Restaurant.ViewModels.Account.RegistratieViewModel

@{
    ViewData["Title"] = "Nieuwe gebruiker aanmaken";
}

<h2>Nieuwe gebruiker aanmaken</h2>

<form asp-action="Create" method="post">
    @Html.AntiForgeryToken()

    <div class="mb-3">
        <label asp-for="Voornaam" class="form-label">Voornaam</label>
        <input asp-for="Voornaam" class="form-control" />
        @Html.ValidationMessageFor(m => m.Voornaam, "", new { @class = "text-danger" })
    </div>
    <div class="mb-3">
        <label asp-for="Naam" class="form-label">Achternaam</label>
        <input asp-for="Naam" class="form-control" />
        @Html.ValidationMessageFor(m => m.Naam, "", new { @class = "text-danger" })
    </div>
    <div class="mb-3">
        <label asp-for="Email" class="form-label">Email</label>
        <input asp-for="Email" class="form-control" />
        @Html.ValidationMessageFor(m => m.Email, "", new { @class = "text-danger" })
    </div>
    <div class="mb-3">
        <label asp-for="Password" class="form-label">Wachtwoord</label>
        <input asp-for="Password" class="form-control" type="password" />
        @Html.ValidationMessageFor(m => m.Password, "", new { @class = "text-danger" })
    </div>
    <div class="mb-3">
        <label asp-for="ConfirmPassword" class="form-label">Herhaal wachtwoord</label>
        <input asp-for="ConfirmPassword" class="form-control" type="password" />
        @Html.ValidationMessageFor(m => m.ConfirmPassword, "", new { @class = "text-danger" })
    </div>
    <div class="mb-3">
        <div class="form-label">Rollen</div>
        @if (Model.AllRollen != null)
        {
            foreach (var role in Model.AllRollen)
            {
                bool isChecked = role.Value.Equals("Klant");
                <div class="form-check d-flex">
                    <input class="form-check-input my-auto me-sm-2" type="checkbox" name="Rollen" value="@role.Value" id="role_@role.Value" @(isChecked ? "checked" : "") />
                    <label class="form-check-label" for="role_@role.Value">@role.Text</label>
                </div>
            }
        }
    </div>
    <button type="submit" class="btn btn-custom-primary">Aanmaken</button>
    <a asp-action="Gebruikers" class="btn btn-custom-secondary">Annuleren</a>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}