@model Restaurant.ViewModels.Account.RegistratieViewModel

@{
    ViewData["Title"] = "Registratie";
}

<style>
    .fixed-validation-message {
        min-height: 1.25em;
        display: block;
    }
</style>

<div class="container d-flex justify-content-center" style="margin-top: 60px;">
    <div class="col-md-8">
        <h2 class="mb-4 text-center">Registratie</h2>

        <div asp-validation-summary="All" class="alert alert-danger" role="alert"></div>

        <form asp-action="Registratie" method="post">
            <div class="row">
                <!-- Required fields: Email, Land, Password, ConfirmPassword -->
                <div class="col-md-6">
                    <div class="mb-3">
                        <label asp-for="Email" class="form-label"></label><span class="text-danger">*</span>
                        <input asp-for="Email" class="form-control" type="email"/>
                        <span asp-validation-for="Email" class="text-danger small fixed-validation-message"></span>
                    </div>
                    <div class="mb-3">
                        <label asp-for="Password" class="form-label"></label><span class="text-danger">*</span>
                        <input asp-for="Password" class="form-control" type="password" />
                        <span asp-validation-for="Password" class="text-danger small fixed-validation-message"></span>
                    </div>
                </div>
                <div class="col-md-6">
                    <div class="mb-3">
                        <label asp-for="Land" class="form-label"></label><span class="text-danger">*</span>
                        <select asp-for="Land" asp-items="Model.Landen" class="form-control"></select>
                        <span asp-validation-for="Land" class="text-danger small fixed-validation-message"></span>
                    </div>
                    <div class="mb-3">
                        <label asp-for="ConfirmPassword" class="form-label"></label><span class="text-danger">*</span>
                        <input asp-for="ConfirmPassword" class="form-control" type="password" />
                        <span asp-validation-for="ConfirmPassword" class="text-danger small fixed-validation-message"></span>
                    </div>
                </div>
            </div>
            <div class="row">
                <!-- Non-required fields: Voornaam, Naam, Adres, Huisnummer, Postcode, Gemeente -->
                <div class="col-md-6">
                    <div class="mb-3">
                        <label asp-for="Voornaam" class="form-label"></label>
                        <input asp-for="Voornaam" class="form-control" />
                        <span asp-validation-for="Voornaam" class="text-danger small fixed-validation-message"></span>
                    </div>
                    <div class="mb-3">
                        <label asp-for="Adres" class="form-label"></label>
                        <input asp-for="Adres" class="form-control" />
                        <span asp-validation-for="Adres" class="text-danger small fixed-validation-message"></span>
                    </div>
                    <div class="mb-3">
                        <label asp-for="Postcode" class="form-label"></label>
                        <input asp-for="Postcode" class="form-control" />
                        <span asp-validation-for="Postcode" class="text-danger small fixed-validation-message"></span>
                    </div>
                </div>
                <div class="col-md-6">
                    <div class="mb-3">
                        <label asp-for="Naam" class="form-label"></label>
                        <input asp-for="Naam" class="form-control" />
                        <span asp-validation-for="Naam" class="text-danger small fixed-validation-message"></span>
                    </div>
                    <div class="mb-3">
                        <label asp-for="Huisnummer" class="form-label"></label>
                        <input asp-for="Huisnummer" class="form-control" />
                        <span asp-validation-for="Huisnummer" class="text-danger small fixed-validation-message"></span>
                    </div>
                    <div class="mb-3">
                        <label asp-for="Gemeente" class="form-label"></label>
                        <input asp-for="Gemeente" class="form-control" />
                        <span asp-validation-for="Gemeente" class="text-danger small fixed-validation-message"></span>
                    </div>
                </div>
            </div>

            <div class="mb-2">
                <span class="text-muted small">Velden gemarkeerd met <span class="text-danger">*</span> zijn verplicht.</span>
            </div>

            <button type="submit" class="btn btn-primary w-100">Volgende</button>
        </form>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
