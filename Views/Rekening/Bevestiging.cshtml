@{
    ViewData["Title"] = "Betaling Bevestigd";
    var reservatieId = ViewBag.ReservatieId;
}

<div class="container d-flex justify-content-center" style="margin-top: 60px;">
    <div class="col-md-8">
        <div class="alert alert-success d-flex align-items-center mb-4" role="alert">
            <i class="bi bi-check-circle-fill fs-2 me-3"></i>
            <div>
                <h4 class="alert-heading mb-1">Betaling succesvol!</h4>
                <p class="mb-0">De betaling voor reservatie <strong>#@reservatieId</strong> is bevestigd.</p>
            </div>
        </div>
    </div>
</div>
