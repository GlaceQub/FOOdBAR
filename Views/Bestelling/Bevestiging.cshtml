@{
    ViewData["Title"] = "Bestelling Bevestigd";
    var reservatieId = ViewBag.ReservatieId;
}

<div class="container d-flex justify-content-center" style="margin-top: 60px;">
    <div class="col-md-8">
        <div class="alert alert-success d-flex align-items-center mb-4" role="alert">
            <i class="bi bi-check-circle-fill fs-2 me-3"></i>
            <div>
                <h4 class="alert-heading mb-1">Bestelling succesvol!</h4>
                <p class="mb-0">
                    Bedankt voor uw bestelling.<br />
                    Uw bestelling is succesvol verstuurd en u ontvangt een bevestiging per e-mail.
                </p>
            </div>
        </div>
        <div class="text-center">
            <a href="/Bestelling/Create?reservatieId=@reservatieId" class="btn btn-success">
                Nieuwe bestelling plaatsen
            </a>
        </div>
    </div>
</div>
