@model Restaurant.ViewModels.Reservation.ReservationViewModel
@{
    ViewData["Title"] = "Reservatie bewerken";
}

<h1>Reservatie bewerken</h1>

<form asp-action="Edit" method="post">
    <input type="hidden" asp-for="Id" />
    <div class="form-group">
        <label asp-for="AantalPersonen"></label>
        <input asp-for="AantalPersonen" class="form-control" />
        <span asp-validation-for="AantalPersonen" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Datum"></label>
        <input asp-for="Datum" class="form-control" type="date" />
        <span asp-validation-for="Datum" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="TijdSlotId"></label>
        <select asp-for="TijdSlotId" class="form-control" asp-items="ViewBag.TijdslotId"></select>
        <span asp-validation-for="TijdSlotId" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Opmerking"></label>
        <input asp-for="Opmerking" class="form-control" />
        <span asp-validation-for="Opmerking" class="text-danger"></span>
    </div>
    <button type="submit" class="btn btn-primary">Opslaan</button>
    <a asp-action="Index" class="btn btn-secondary">Annuleren</a>
</form>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}