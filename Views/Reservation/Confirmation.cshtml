@model Restaurant.Models.Reservatie
@{
    ViewData["Title"] = "Reservatie Bevestiging";
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <h2 class="mb-4">Reservatie Bevestigd</h2>
            <ul class="list-group">
                <li class="list-group-item"><strong>Datum:</strong> @Model.Datum?.ToString("dd/MM/yyyy")</li>
                <li class="list-group-item"><strong>Tijdslot:</strong> @Model.Tijdslot?.Naam</li>
                <li class="list-group-item"><strong>Aantal personen:</strong> @Model.AantalPersonen</li>
                <li class="list-group-item"><strong>Speciale verzoeken:</strong> @Model.Opmerking</li>
            </ul>
            <div class="mt-4">
                <a href="@Url.Action("Index", "Home")" class="btn btn-secondary">Terug naar Home</a>
            </div>
        </div>
    </div>
</div>