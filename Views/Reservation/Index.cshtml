@model IEnumerable<Restaurant.Models.Reservatie>
@{
    DateTime? geselecteerdeDatum = ViewBag.GeselecteerdeDatum as DateTime?;
}

<div class="mt-3">
    <h1>Reservaties</h1>

    <form method="get" asp-action="Index" class="mb-3">
        <label for="datum">Filter op datum:</label>
        <input type="date" id="datum" name="datum"
               value="@(geselecteerdeDatum?.ToString("yyyy-MM-dd") ?? "")"
               class="form-control d-inline-block w-auto"
               onchange="this.form.submit();" />
    </form>

    <table class="table tafel-table align-middle">
        <thead>
            <tr>
                <th>Datum</th>
                <th>Tijdslot</th>
                <th>Aantal personen</th>
                @if (User.IsInRole("Eigenaar") || User.IsInRole("Zaalverantwoordelijke"))
                {
                    <th>Klant</th>
                }
                <th>Opmerkingen</th>
                <th>Tafel</th>
                <th>Acties</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var r in Model)
            {
                <tr>
                    <td>@r.Datum?.ToString("dd-MM-yyyy")</td>
                    <td>@r.Tijdslot?.Naam</td>
                    <td>@r.AantalPersonen</td>
                    @if (User.IsInRole("Eigenaar") || User.IsInRole("Zaalverantwoordelijke"))
                    {
                        <td>@r.CustomUser?.VolledigeNaam</td>
                    }
                    <td>@r.Opmerking</td>
                    <td>
                        @if (r.Tafellijsten != null && r.Tafellijsten.Any())
                        {
                            @string.Join(", ", r.Tafellijsten.Select(tl => tl.Tafel.TafelNummer))
                        }
                        else
                        {
                            <span class="text-danger">Geen tafel toegewezen</span>
                        }
                    </td>
                    <td>
                        @if (User.IsInRole("Klant") && r.KlantId == User.FindFirst(System.Security.Claims.ClaimTypes.NameIdentifier)?.Value)
                        {
                            <a asp-controller="Bestelling" asp-action="Create" asp-route-id="@r.Id" class="btn btn-custom-primary btn-sm py-sm-1 px-sm-4">Bestel</a>
                        }
                        @if (User.IsInRole("Eigenaar") || User.IsInRole("Zaalverantwoordelijke"))
                        {
                            <a asp-action="Edit" asp-route-id="@r.Id" class="btn btn-warning btn-sm">Wijzigen</a>
                            <form asp-action="Delete" asp-route-id="@r.Id" method="post" style="display:inline;">
                                <button type="submit" class="btn btn-danger btn-sm" onclick="return confirm('Weet je zeker dat je deze reservatie wilt verwijderen?');">Verwijderen</button>
                            </form>
                            <a asp-controller="Rekening" asp-action="Afrekenen" asp-route-id="@r.Id" class="btn btn-success btn-sm ms-1">Afrekenen</a>
                        }
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>