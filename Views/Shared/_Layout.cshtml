<body data-user-role="@User.FindFirst(System.Security.Claims.ClaimTypes.Role)?.Value"
      data-user-name="@User.Identity.Name">
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3">
            <div class="container-fluid">
                <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">Restaurant</a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1">
                        <li class="nav-item">
                            <a class="nav-link" asp-area="" asp-controller="Menu" asp-action="Index">Menu</a>
                        </li>
                        <!-- <li class="nav-item">
                            <a class="nav-link" asp-area="" asp-controller="Photos" asp-action="Index">Foto's</a>
                        </li> -->
                        <li class="nav-item">
                            <a class="nav-link @(ViewContext.RouteData.Values["controller"]?.ToString() == "Home" && ViewContext.RouteData.Values["action"]?.ToString() == "Index" ? "active" : "")"
                                asp-area=""
                                asp-controller="Home"
                                asp-action="Index">
                                Home
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-controller="Reservation" asp-action="Create" asp-action="Index">Reserveren</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link @(ViewContext.RouteData.Values["controller"]?.ToString() == "Home" && ViewContext.RouteData.Values["action"]?.ToString() == "Privacy" ? "active" : "")"
                               asp-area=""
                               asp-controller="Home"
                               asp-action="Privacy">
                                Privacy
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-area="" asp-controller="Contact" asp-action="Index">Contact</a>
                        </li>
                        @if (User.IsInRole("Kok") || User.IsInRole("Ober") || User.IsInRole("Eigenaar"))
                        {
                            <li class="nav-item">
                                <a class="nav-link @(ViewContext.RouteData.Values["controller"]?.ToString() == "Bestelling" && ViewContext.RouteData.Values["action"]?.ToString() == "Index" ? "active" : "")"
                                   asp-area=""
                                   asp-controller="Bestelling"
                                   asp-action="Index">
                                    Bestellingen
                                </a>
                            </li>
                        }
                    </ul>
                    <ul class="navbar-nav ms-auto">
                        <li class="nav-item">
                            @if (User.Identity.IsAuthenticated)
                            {
                                if (Context.Request.Path.StartsWithSegments("/Account/Dashboard", StringComparison.OrdinalIgnoreCase))
                                {
                                    <form asp-controller="Account" asp-action="Logout" method="post" class="logout-form">
                                        <button type="submit" class="nav-link navbar-login">Logout</button>
                                    </form>
                                }
                                else
                                {
                                    <a class="nav-link navbar-login" asp-area="" asp-controller="Account" asp-action="Dashboard">Account</a>
                                }
                            }
                            else
                            {
                                <a class="nav-link navbar-login" asp-area="" asp-controller="Account" asp-action="Login">Aanmelden</a>
                            }
                        </li>
                    </ul>
                </div>
            </div>
        </nav>
