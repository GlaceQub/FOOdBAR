@model CategorieEditViewModel

@{
    ViewData["Title"] = "Categorie bewerken";
}

<div class="mt-3">
    <h1 class="mb-4">Categorie bewerken</h1>
    <div class="card shadow-sm">
        <div class="card-body">
            <div asp-validation-summary="All" class="text-danger"></div>
            <form asp-action="Edit" method="post" class="row g-3">
                <input type="hidden" asp-for="Id" />
                <div class="col-12">
                    <label asp-for="Naam" class="form-label">Naam</label>
                    <input asp-for="Naam" class="form-control" />
                    <span asp-validation-for="Naam" class="text-danger small d-block mt-1"></span>
                </div>
                <div class="col-12">
                    <label asp-for="TypeId" class="form-label">Type</label>
                    <select asp-for="TypeId" class="form-control"
                            asp-items="@(new SelectList(Model.TypeList, "Id", "Naam", Model.TypeId))"></select>
                    <span asp-validation-for="TypeId" class="text-danger small d-block mt-1"></span>
                </div>
                <div class="col-12">
                    <div class="form-check">
                        <input asp-for="Actief" class="form-check-input" />
                        <label asp-for="Actief" class="form-check-label ms-2"></label>
                    </div>
                </div>
                <div class="col-12 d-flex gap-2 mt-3">
                    <button type="submit" class="btn btn-custom-primary">Opslaan</button>
                    <a asp-action="Index" class="btn btn-custom-secondary">Annuleren</a>
                </div>
            </form>
        </div>
    </div>
</div>
@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}